<div class="container">
<div class="container1">
<div>
<h2><%= @message.title%></h2>
<h2><%= @message.description%></h2>

<p>Posted by<%= @message.user.email %> <%= time_ago_in_words(@message.created_at) %> ago</p>

<hr>
</div>
<h3>Comments: </h3>
<% @message.comments.each do |comment|%>
<%= render 'comments/comment', comment:comment  %>
<% end %>
<h3>Add Comments</h3>
<%= render 'comments/form' %>

<div class="btn_st">
<hr>
<%= link_to "Back",  root_path, class: "btn btn-default" %>
<% if user_signed_in? %>
<% if @message.user_id == current_user.id%>
<%= link_to "Edit", edit_message_path(@message), class: "btn btn-default" %>
<%= link_to "Delete", message_path(@message) ,   class: "btn btn-default", 
data:{turbo_method: :delete,turbo_confirm: "Are you sure"} %>
<% end %>
<% end%>
</div>
</div>
</div>

