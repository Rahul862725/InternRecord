<p> <%= comment.content%></p>
<p> Posted by <%= comment.user.email %> <%= time_ago_in_words(comment.created_at) %></p>

<% if user_signed_in? %>
<% if comment.user_id == current_user.id %>
<%= link_to "Edit", edit_message_comment_path(comment.message,comment) , class: "btn btn-default" %>
<%= link_to "Delete", message_comment_path(comment.message,comment), data: {turbo_method: :delete, turbo_confirm: "Are you sure to delete comment."} , class: "btn btn-default"%>
<% end %>
<% end %>